<html>
	<head>
		<title>The Wick of Bushwick</title>
		<script src="https://maps.googleapis.com/maps/api/js"></script>
		<script src="/js/fp_main.js"></script>
		<meta charset="utf-8">
<!-- 		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"> -->
		<link href="/css/fp_map.css" rel="stylesheet" type="text/css">
		<link href="/css/fp_route.css" rel="stylesheet" type="text/css"> 
	</head>

	<body>
		<div id="restfulRoutes">
			<ul id="routesList">
				<% var rowsObj = JSON.parse(rows); %>
				<% for (var i=0; i<rowsObj.length; i++) { %>
					<li><%= rowsObj[i].nickname %>&nbsp;:&nbsp;<%= rowsObj[i].route_origin %>&nbsp;=>&nbsp;<%= rowsObj[i].route_destination %></li>
				<% } %>
			</ul>

			<h3>Add a route here:</h3>
			<input type="text" id="newRouteNickname" placeholder="e.g. 'home-to-work'">
			<input type="text" id="newRouteOrigin" placeholder="50 Broadway, NY, NY">
			<input type="text" id="newRouteDestination" placeholder="80 5th Av, NY, NY">
			<button id = "addNewRoute">ADD IT!</button>
		</div>

		<div id="control">
            <label for="address">Addresses:</label>
            <input type="text" id="address_origin" placeholder="Origin" />&nbsp;<input type="text" id="address_destination" placeholder="Destination" />
            <br>
            <label for="search_term">Search term:</label>
            <input type="text" id="search_term" placeholder="Search term" />
            <br>
            <button onclick="calcRoute();">Search</button>
        </div>
        <div id="directions-panel"></div>
		<div id="googleMap"></div>

		<!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script> -->
		<!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script> -->
		<script src="/js/start.js"></script>
	</body>
</html>
